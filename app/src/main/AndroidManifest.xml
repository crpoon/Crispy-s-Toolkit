<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crpoon.crispytoolkit" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CrispyToolkit"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoinFlipper"
            android:label="@string/title_activity_coin_flipper"
            android:parentActivityName=".CrispyToolkit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.crpoon.crispytoolkit.CrispyToolkit" />
        </activity>
        <activity
            android:name=".FreezeMageActivity"
            android:label="@string/title_activity_freeze_mage"
            android:parentActivityName=".CrispyToolkit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.crpoon.crispytoolkit.CrispyToolkit" />
        </activity>
    </application>

</manifest>
